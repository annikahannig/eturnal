#!/bin/sh

# Build a portable binary release tarball for Linux (x64).

set -e
set -u

export PATH='/usr/local/bin:/usr/bin:/bin'

myself=${0##*/}

usage()
{
	echo >&2 "Usage: $myself"
	exit 2
}

if ! [ -e 'rebar.config' ] || ! [ -e "scripts/$myself" ]
then
	echo >&2 "Please call this script from the repository's root directory."
	exit 2
elif [ $# -ne 0 ]
then
	usage
fi

if [ -d '/run/shm' -a "$(df --output=avail '/run/shm' | tail -1)" -gt 15000000 ]
then
	work_dir='/run/shm'
else
	work_dir="$PWD"
fi

rel_name='eturnal'
rel_vsn=$(scripts/get-version)
rebar_vsn='3.14.3'
crosstool_vsn='1.24.0'
termcap_vsn='1.3.1'
zlib_vsn='1.2.11'
yaml_vsn='0.2.5'
ssl_vsn='1.1.1k'
otp_vsn='23.2'
crosstool_dir="crosstool-ng-$crosstool_vsn"
termcap_dir="termcap-$termcap_vsn"
zlib_dir="zlib-$zlib_vsn"
yaml_dir="yaml-$yaml_vsn"
ssl_dir="openssl-$ssl_vsn"
otp_dir="otp_src_$otp_vsn"
crosstool_tar="$crosstool_dir.tar.xz"
termcap_tar="$termcap_dir.tar.gz"
zlib_tar="$zlib_dir.tar.gz"
yaml_tar="$yaml_dir.tar.gz"
ssl_tar="$ssl_dir.tar.gz"
otp_tar="$otp_dir.tar.gz"
rel_tar="$rel_name-$rel_vsn.tar.gz"
rel_dir="$PWD/_build/stripped/rel/$rel_name"
target='x86_64-linux-gnu'
n_jobs=$(nproc)
prefix=$(mktemp -d "$work_dir/.$myself.XXXXXX")
src_dir="$prefix/src"
dst_dir="$prefix/$rel_name"
dst_tar="$rel_name-$rel_vsn-linux-x64.tar.gz"
build_start=$(date '+%F %T')

trap 'rm -rf "$prefix"' INT TERM EXIT

