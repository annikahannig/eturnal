#.

echo "$myself: You need about 10 GiB of free space in $(dirname "$prefix")."
echo "$myself: Building everything will take ages."
echo "$myself: I'll go ahead in a few seconds."
echo "$myself: Press <Ctrl>+<C> to abort."

sleep 5

mkdir "$src_dir"

echo "$myself: Downloading dependencies ..."
cd "$src_dir"
curl -LO "http://crosstool-ng.org/download/crosstool-ng/$crosstool_tar"
curl -LO "https://ftp.gnu.org/gnu/termcap/$termcap_tar"
curl -LO "https://zlib.net/$zlib_tar"
curl -LO "https://pyyaml.org/download/libyaml/$yaml_tar"
curl -LO "https://www.openssl.org/source/$ssl_tar"
curl -LO "https://erlang.org/download/$otp_tar"
cd "$OLDPWD"

echo "$myself: Unpacking dependencies ..."
cd "$src_dir"
tar -xJf "$crosstool_tar"
tar -xzf "$termcap_tar"
tar -xzf "$zlib_tar"
tar -xzf "$yaml_tar"
tar -xzf "$ssl_tar"
tar -xzf "$otp_tar"
cd "$OLDPWD"

echo "$myself: Building Crosstool-NG $crosstool_vsn ..."
cd "$src_dir/$crosstool_dir"
./configure --prefix="$prefix"
make
make install
cd "$OLDPWD"

export PATH="$prefix/bin:$PATH"
export CT_TOP_DIR="$prefix"
export CT_PREFIX="$prefix/x-tools"

echo "$myself: Building toolchain ..."
create_crosstool_config "$prefix/.config"
cd "$prefix"
ct-ng build CT_JOBS="$n_jobs"
cd "$OLDPWD"

export PATH="$CT_PREFIX/$target/bin:$PATH"
export CC="$target-gcc"
export CXX="$target-g++"
export CFLAGS="-g0 -O2 -pipe -fomit-frame-pointer -static-libgcc -I$prefix/include"
export CXXFLAGS="$CFLAGS -static-libstdc++"
export LDFLAGS="-L$prefix/lib"

echo "$myself: Building Termcap $termcap_vsn ..."
cd "$src_dir/$termcap_dir"
./configure --prefix="$prefix"
cat >'config.h' <<-'EOF'
	#ifndef CONFIG_H
	#define CONFIG_H
	#define INTERNAL_TERMINAL "internal:\\\n" \
	        "\t:am:bs:ms:xn:xo:\\\n" \
	        "\t:co#80:it#8:li#24:vt#3:\\\n" \
	        "\t:@8=\\EOM:DO=\\E[%dB:K1=\\EOq:K2=\\EOr:K3=\\EOs:K4=\\EOp:K5=\\EOn:\\\n" \
	        "\t:LE=\\E[%dD:RA=\\E[?7l:RI=\\E[%dC:SA=\\E[?7h:UP=\\E[%dA:\\\n" \
	        "\t:ac=``aaffggjjkkllmmnnooppqqrrssttuuvvwwxxyyzz{{||}}~~:\\\n" \
	        "\t:ae=^O:as=^N:bl=^G:cb=\\E[1K:cd=\\E[J:ce=\\E[K:cl=\\E[H\\E[J:\\\n" \
	        "\t:cm=\\E[%i%d;%dH:cr=^M:cs=\\E[%i%d;%dr:ct=\\E[3g:do=^J:\\\n" \
	        "\t:eA=\\E(B\\E)0:ho=\\E[H:k0=\\EOy:k1=\\EOP:k2=\\EOQ:k3=\\EOR:\\\n" \
	        "\t:k4=\\EOS:k5=\\EOt:k6=\\EOu:k7=\\EOv:k8=\\EOl:k9=\\EOw:k;=\\EOx:\\\n" \
	        "\t:kb=^H:kd=\\EOB:ke=\\E[?1l\\E>:kl=\\EOD:kr=\\EOC:ks=\\E[?1h\\E=:\\\n" \
	        "\t:ku=\\EOA:le=^H:mb=\\E[5m:md=\\E[1m:me=\\E[m\\017:mr=\\E[7m:\\\n" \
	        "\t:nd=\\E[C:rc=\\E8:rs=\\E>\\E[?3l\\E[?4l\\E[?5l\\E[?7h\\E[?8h:\\\n" \
	        "\t:..sa=\\E[0%?%p1%p6%|%t;1%;%?%p2%t;4%;%?%p1%p3%|%t;7%;%?%p4%t;5%;m%?%p9%t\\016%e\\017%;:\\\n" \
	        "\t:sc=\\E7:se=\\E[m:sf=^J:so=\\E[7m:sr=\\EM:st=\\EH:ta=^I:ue=\\E[m:\\\n" \
	        "\t:up=\\E[A:us=\\E[4m:"
	#endif
EOF
make CPPFLAGS='-DHAVE_CONFIG_H=1'
make install
cd "$OLDPWD"

echo "$myself: Building zlib $zlib_vsn ..."
cd "$src_dir/$zlib_dir"
CFLAGS="$CFLAGS -O3 -fPIC" ./configure --prefix="$prefix" --static
make
make install
cd "$OLDPWD"

echo "$myself: Building LibYAML $yaml_vsn ..."
cd "$src_dir/$yaml_dir"
./configure --prefix="$prefix" --disable-shared CFLAGS="$CFLAGS -fPIC"
make
make install
cd "$OLDPWD"

echo "$myself: Building OpenSSL $ssl_vsn ..."
cd "$src_dir/$ssl_dir"
./config --prefix="$prefix" --openssldir="$prefix" no-shared no-ui-console \
    CFLAGS="$CFLAGS -O3 -fPIC"
make build_libs
make install_dev
cd "$OLDPWD"

export ERL_COMPILER_OPTIONS='[deterministic, no_debug_info]'

echo "$myself: Building Erlang/OTP $otp_vsn ..."
cd "$src_dir/$otp_dir"
./configure                   \
    --prefix="$prefix"        \
    --with-ssl="$prefix"      \
    --without-javac           \
    --disable-dynamic-ssl-lib \
    --disable-hipe
make
make install
cd "$OLDPWD"

echo "$myself: Downloading rebar $rebar_vsn ..."
cd "$prefix/bin"
curl -LO "https://github.com/erlang/rebar3/releases/download/$rebar_vsn/rebar3"
chmod +x 'rebar3'
cd "$OLDPWD"

echo "$myself: Building $rel_name $rel_vsn ..."
rm -rf "$HOME/.cache/rebar3" '_build'
rebar3 clean -a
rebar3 as stripped tar
mkdir "$dst_dir"
tar -C "$dst_dir" -xzf "$rel_dir/$rel_tar"
sed -i "2iexport TERM='internal'" \
    "$dst_dir/bin/$rel_name" "$dst_dir/bin/$rel_name-$rel_vsn"
find "$dst_dir/lib" -type f -name '*.so' -exec strip -s '{}' '+'
find "$dst_dir/erts-*/bin" -type f -perm '-u+x' \
                           -exec strip -s '{}' '+' 2>'/dev/null' || :
tar -C "$prefix" --owner="$rel_name" --group="$rel_name" -cf - "$rel_name" \
    | gzip -9 >"$dst_tar"

echo "$myself: Created $dst_tar successfully."
echo "$myself: Build started: $build_start"
echo "$myself: Build ended: $(date '+%F %T')"

# vim:set foldmarker=#',#. foldmethod=marker:
